{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord{% endblock %}

{% block body %}
<div class="py-12">
    <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
        <div class="bg-white overflow-hidden shadow-sm sm:rounded-lg">
            <div class="p-6 bg-white border-b border-gray-200">
                <h2 class="text-2xl font-bold text-green-700 mb-6">Tableau de Bord</h2>
                
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <!-- Carte Statistiques -->
                    <a href="{{ path('app_statistiques') }}" 
                       class="bg-green-50 p-6 rounded-lg shadow hover:shadow-md transition-shadow">
                        <div class="flex items-center">
                            <i class="fas fa-chart-bar text-green-600 text-2xl mr-3"></i>
                            <h3 class="text-lg font-semibold">Statistiques</h3>
                        </div>
                        <p class="mt-2 text-gray-600">Voir les analyses de vos activités</p>
                    </a>

                    <!-- Carte Produits -->
                    <a href="{{ path('app_produit_index') }}" 
                       class="bg-green-50 p-6 rounded-lg shadow hover:shadow-md transition-shadow">
                        <div class="flex items-center">
                            <i class="fas fa-seedling text-green-600 text-2xl mr-3"></i>
                            <h3 class="text-lg font-semibold">Produits</h3>
                        </div>
                        <p class="mt-2 text-gray-600">Gérer vos produits agricoles</p>
                    </a>

                    <!-- Carte Transactions -->
                    <a href="{{ path('app_mouvement_produit_index') }}" 
                       class="bg-green-50 p-6 rounded-lg shadow hover:shadow-md transition-shadow">
                        <div class="flex items-center">
                            <i class="fas fa-exchange-alt text-green-600 text-2xl mr-3"></i>
                            <h3 class="text-lg font-semibold">Transactions</h3>
                        </div>
                        <p class="mt-2 text-gray-600">Enregistrer et consulter les mouvements</p>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}