{% extends 'base.html.twig' %}

{% block title %}{{ (edit_mode|default(false)) ? 'Modifier' : 'Nouveau' }} Mouvement - AgroManager{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-success">
            <i class="bi bi-arrow-left-right me-2"></i>
            {{ (edit_mode|default(false)) ? 'Modifier le mouvement' : 'Nouveau mouvement' }}
        </h1>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <i class="bi bi-card-text me-2"></i>
            Formulaire {{ (edit_mode|default(false)) ? 'de modification' : 'de création' }}
        </div>
        <div class="card-body">
            {{ include('mouvement_produit/_form.html.twig') }}
        </div>
    </div>

    <div class="mt-4">
        <a href="{{ path('app_mouvement_produit_index') }}" class="btn btn-outline-success btn-hover-grow">
            <i class="bi bi-arrow-left me-2"></i>Retour à la liste
        </a>
    </div>
</div>
{% endblock %}