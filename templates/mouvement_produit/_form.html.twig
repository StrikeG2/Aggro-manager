{{ form_start(form) }}
    <div class="row g-3">
        <div class="col-md-6">
            {{ form_row(form.produit, {
                attr: { class: 'form-select' },
                label: 'Produit',
                label_attr: { class: 'form-label fw-medium' }
            }) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.type, {
                attr: { class: 'form-select' },
                label: 'Type de mouvement',
                label_attr: { class: 'form-label fw-medium' }
            }) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.quantite, {
                attr: { class: 'form-control', min: 1 },
                label: 'Quantit√©',
                label_attr: { class: 'form-label fw-medium' }
            }) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.date, {
                attr: { 
                    class: 'form-control datetimepicker-input',
                    'data-toggle': 'datetimepicker',
                    'data-target': '#mouvement_produit_form_date' 
                },
                label: 'Date et heure',
                label_attr: { class: 'form-label fw-medium' }
            }) }}
        </div>
        <div class="col-12">
            {{ form_row(form.motif, {
                attr: { class: 'form-control', rows: 3 },
                label: 'Motif',
                label_attr: { class: 'form-label fw-medium' }
            }) }}
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-success btn-hover-grow">
            <i class="bi bi-check-circle me-2"></i>
            {{ button_label|default('Enregistrer') }}
        </button>
    </div>
{{ form_end(form) }}

{# Ajoutez ces scripts pour le datetimepicker #}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.39.0/css/tempusdominus-bootstrap-4.min.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.39.0/js/tempusdominus-bootstrap-4.min.js"></script>

<script>
$(function () {
    $('#mouvement_produit_form_date').datetimepicker({
        format: 'YYYY-MM-DD HH:mm',
        sideBySide: true,
        buttons: {
            showToday: true,
            showClose: true
        },
        locale: 'fr'
    });
});
</script>