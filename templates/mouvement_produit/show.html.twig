{% extends 'base.html.twig' %}

{% block title %}Détails du Mouvement - AgroManager{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-success">
            <i class="bi bi-arrow-left-right me-2"></i>
            Détails du Mouvement #{{ mouvement_produit.id }}
        </h1>
        <div class="btn-group">
            <a href="{{ path('app_mouvement_produit_edit', {'id': mouvement_produit.id}) }}" 
               class="btn btn-primary btn-hover-grow">
                <i class="bi bi-pencil me-2"></i>Modifier
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <i class="bi bi-info-circle me-2"></i>Informations générales
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <tbody>
                            <tr>
                                <th class="w-25">ID</th>
                                <td>{{ mouvement_produit.id }}</td>
                            </tr>
                            <tr>
                                <th>Type</th>
                                <td>
                                    <span class="badge {% if mouvement_produit.type == 'entree' %}bg-success{% else %}bg-danger{% endif %}">
                                        {{ mouvement_produit.type|capitalize }}
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <th>Quantité</th>
                                <td>{{ mouvement_produit.quantite }}</td>
                            </tr>
                            <tr>
                                <th>Prix Unitaire</th>
                                <td>{{ mouvement_produit.prixUnitaire|number_format(0, ',', ' ') }} FCFA</td>
                            </tr>
                            <tr>
                                <th>Motif</th>
                                <td>{{ mouvement_produit.motif|default('N/A') }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <i class="bi bi-calendar-event me-2"></i>Date et heure
                </div>
                <div class="card-body text-center py-4">
                    <div class="display-6 mb-3">
                        {{ mouvement_produit.date ? mouvement_produit.date|date('d/m/Y') : 'N/A' }}
                    </div>
                    <span class="badge bg-secondary">
                        {{ mouvement_produit.date ? mouvement_produit.date|date('H:i') : '' }}
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a href="{{ path('app_mouvement_produit_index') }}" class="btn btn-outline-success btn-hover-grow">
            <i class="bi bi-arrow-left me-2"></i>Retour à la liste
        </a>
        
        {{ include('mouvement_produit/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}