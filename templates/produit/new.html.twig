{% extends 'base.html.twig' %}

{% block title %}Nouveau Produit - AgroManager{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-success">
            <i class="bi bi-plus-circle me-2"></i>Nouveau Produit
        </h1>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <i class="bi bi-card-text me-2"></i>Formulaire de création
        </div>
        <div class="card-body">
            {{ include('produit/_form.html.twig') }}
        </div>
    </div>

    <div class="mt-4">
        <a href="{{ path('app_produit_index') }}" class="btn btn-outline-success btn-hover-grow">
            <i class="bi bi-arrow-left me-2"></i>Retour à la liste
        </a>
    </div>
</div>
{% endblock %}