{% extends 'base.html.twig' %}

{% block title %}Détails Produit - AgroManager{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-success">
            <i class="bi bi-eye me-2"></i>Détails du Produit
        </h1>
        <div class="btn-group">
            <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-primary btn-hover-grow">
                <i class="bi bi-pencil me-2"></i>Modifier
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <i class="bi bi-info-circle me-2"></i>Informations
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <th class="w-25">Nom</th>
                        <td>{{ produit.nom }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ produit.description|default('Aucune description') }}</td>
                    </tr>
                    <tr>
                        <th>Prix Unitaire</th>
                        <td>{{ produit.prixUnitaire|format_currency('XOF') }}</td>
                    </tr>
                    <tr>
                        <th>Stock</th>
                        <td>
                            <span class="badge {% if produit.stock > 10 %}bg-success{% else %}bg-warning text-dark{% endif %}">
                                {{ produit.stock }} unité(s)
                            </span>
                        </td>
                    </tr>
                    <tr>
                        <th>Créé le</th>
                        <td>{{ produit.createdAt|date('d/m/Y H:i') }}</td>
                    </tr>
                    <tr>
                        <th>Mis à jour le</th>
                        <td>{{ produit.updatedAt|date('d/m/Y H:i') }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a href="{{ path('app_produit_index') }}" class="btn btn-outline-success btn-hover-grow">
            <i class="bi bi-arrow-left me-2"></i>Retour à la liste
        </a>
        
        {{ include('produit/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}