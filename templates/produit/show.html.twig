{% extends 'base.html.twig' %}

{% block title %}Détails Produit - AgroManager{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-success">
            <i class="bi bi-eye me-2"></i>Détails du Produit
        </h1>
        <div class="btn-group">
            <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-primary btn-hover-grow">
                <i class="bi bi-pencil me-2"></i>Modifier
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <i class="bi bi-info-circle me-2"></i>Informations générales
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <tbody>
                            <tr>
                                <th class="w-25">Nom</th>
                                <td>{{ produit.nom }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ produit.description|default('Aucune description') }}</td>
                            </tr>
                            <tr>
                                <th>Prix Unitaire</th>
                                <td>{{ produit.prixUnitaire|number_format(0, ',', ' ') }} FCFA</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <i class="bi bi-box-seam me-2"></i>Statut du stock
                </div>
                <div class="card-body text-center py-4">
                    <div class="display-4 mb-3 {% if produit.stock > 10 %}text-success{% else %}text-warning{% endif %}">
                        {{ produit.stock }}
                    </div>
                    <span class="badge {% if produit.stock > 10 %}bg-success{% else %}bg-warning text-dark{% endif %}">
                        unité(s) disponible(s)
                    </span>
                </div>
                <div class="card-footer bg-light">
                    <small class="text-muted">
                        <i class="bi bi-clock-history me-1"></i>
                        Mis à jour le {{ produit.updatedAt|date('d/m/Y à H:i') }}
                    </small>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a href="{{ path('app_produit_index') }}" class="btn btn-outline-success btn-hover-grow">
            <i class="bi bi-arrow-left me-2"></i>Retour à la liste
        </a>
        
        {{ include('produit/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}